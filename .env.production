# Daily Statement App - Production Environment Variables
# Copy this file to .env and update with your production settings

# Application Settings
APP_URL=https://yourdomain.com
APP_BASE_PATH=
APP_TIMEZONE=America/New_York
APP_DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=accounts
DB_USER=your_db_user
DB_PASS=your_db_password

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Daily Statement App"

# Logging
LOG_LEVEL=error

# Examples for different hosting scenarios:
# IMPORTANT: URLs should NOT include /public - the redirect handles that

# For root domain hosting (yourdomain.com):
# APP_URL=https://yourdomain.com
# APP_BASE_PATH=

# For subdirectory hosting (yourdomain.com/statements):
# APP_URL=https://yourdomain.com/statements
# APP_BASE_PATH=/statements

# For subdomain hosting (statements.yourdomain.com):
# APP_URL=https://statements.yourdomain.com
# APP_BASE_PATH=
