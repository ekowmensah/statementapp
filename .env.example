# Daily Statement App - Environment Configuration Template
# Copy this file to .env and update with your settings

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=daily_statement_app
DB_USERNAME=root
DB_PASSWORD=

# Application Settings
APP_NAME="Daily Statement App"
APP_URL=http://localhost/accountstatement/public
APP_TIMEZONE=America/New_York
APP_DEBUG=true

# Security Settings
SESSION_NAME=daily_statement_session
SESSION_LIFETIME=7200
PASSWORD_MIN_LENGTH=8

# Email Configuration (for future features)
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@localhost
MAIL_FROM_NAME="Daily Statement App"

# Logging
LOG_ENABLED=true
LOG_LEVEL=info
